<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP03_Entrega.KilometroMetro"
             Title="KilometroMetro">
    <VerticalStackLayout
        Spacing="25"
        Padding="25">
        <Label 
            Text="Conversor de KM para Metro"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontFamily="Empty"/>
        <Label
            x:Name="lblKm"
            Text="Digite os Kilometros"/>
        <Entry
            x:Name="etrKm"/>
        <Button
            x:Name="btnKilometro"
            Text="Conversao de Km"
            Clicked="ConverterKmparaMetros"/>
        <Entry
            x:Name="etrconverter"/>
        <Button
            x:Name="btnLimpeza"
            Clicked="ClickOnLimpeza"
            Text="Limpar"/>
    </VerticalStackLayout>
</ContentPage>