<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP03_Entrega.HectometrosMt"
             Title="HectometrosMt">
    <VerticalStackLayout>
        <Label 
            Text="Conversor de Hec em Metros"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontFamily="Empty"/>
        <Label
            x:Name="lblHec"
            Text="Digite os Hectometros"/>
        <Entry
            x:Name="etrHec"/>
        <Button
            x:Name="btnHec"
            Text="Conversao de Hec"
            Clicked="ConverterHecparaMetros"/>
        <Entry
            x:Name="etrconverter3"/>
    </VerticalStackLayout>
</ContentPage>